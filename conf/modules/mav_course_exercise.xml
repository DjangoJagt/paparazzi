<!DOCTYPE module SYSTEM "module.dtd">

<module name="mav_course_exercise">
  <doc>
    <description>
    Exercise module for Autonomous Flight of MAV Course
    </description>
    <define name="ORANGE_AVOIDER_VISUAL_DETECTION_ID" value="ABI_BROADCAST" description="which VISUAL_DETECTION message to recieve for orange pole detection."/>
  </doc>
  <settings>
    <dl_settings>
      <dl_settings name="Group11set">
         <dl_setting var="oa_color_count_frac" min="0" step="0.01" max="0.5"/>
         <dl_setting var="heading_increment" min="-90" step="1" max="90"/>
         <dl_setting var="div_size_threshold" min="0" step="0.01" max="0.5"/>
      </dl_settings>
    </dl_settings>
  </settings>

  <dep>
    <depends>cv_detect_color_object</depends>
  </dep>
  <!-- TODO Specify header, init, periodic, makefile sections  -->
  <header>
    <file name="mav_exercise.h"/>
  </header>
  <init fun="mav_exercise_init()"/>
  <periodic fun="mav_exercise_periodic()" freq="4"/>
  <makefile target="ap|nps">
    <file name="mav_exercise.c"/>
  </makefile>
</module>
